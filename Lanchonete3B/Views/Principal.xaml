<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lanchonete3B.Views.Principal"
             Title="Principal">
    <ScrollView>
        <VerticalStackLayout>
            <StackLayout Margin="30" Spacing="20">
                <Label 
           Text="Olá, Morto de fome!" 
           HorizontalOptions="Start" />
            </StackLayout>
            <StackLayout Margin="15">
                <Border
                   StrokeThickness="3"
                   StrokeShape="RoundRectangle 20"
                   Padding="10"
                   HeightRequest="290">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.4" Radius="20" Offset="0,9">
                        </Shadow>
                    </Border.Shadow>
                    <StackLayout>
                    </StackLayout>
                </Border>
            </StackLayout>
            <StackLayout Margin="30,0">
                <Label
                   FontAttributes="Bold"
                   Text="Promoções do dia:"/>
            </StackLayout>
            <ScrollView Orientation="Horizontal">
                <StackLayout Spacing="10" Margin="15" Orientation="Horizontal">
                    <Border
                   StrokeThickness="3"
                   StrokeShape="RoundRectangle 20"
                   Padding="10"
                   HeightRequest="100"
                   WidthRequest="100">

                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.4" Radius="20" Offset="0,9">
                            </Shadow>
                        </Border.Shadow>
                        <StackLayout>
                        </StackLayout>
                    </Border>
                    <Border
              StrokeThickness="3"
              StrokeShape="RoundRectangle 20"
              Padding="10"
              HeightRequest="100"
              WidthRequest="100">

                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.4" Radius="20" Offset="0,9">
                            </Shadow>
                        </Border.Shadow>
                        <StackLayout>
                        </StackLayout>
                    </Border>
                    <Border
StrokeThickness="3"
StrokeShape="RoundRectangle 20"
Padding="10"
HeightRequest="100"
WidthRequest="100">

                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.4" Radius="20" Offset="0,9">
                            </Shadow>
                        </Border.Shadow>
                        <StackLayout>
                        </StackLayout>
                    </Border>
                    <Border
StrokeThickness="3"
StrokeShape="RoundRectangle 20"
Padding="10"
HeightRequest="100"
WidthRequest="100">

                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.4" Radius="20" Offset="0,9">
                            </Shadow>
                        </Border.Shadow>
                        <StackLayout>
                        </StackLayout>
                    </Border>
                    <Border
                   StrokeThickness="3"
                   StrokeShape="RoundRectangle 20"
                   Padding="10"
                   HeightRequest="100"
                   WidthRequest="100">

                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.4" Radius="20" Offset="0,9">
                            </Shadow>
                        </Border.Shadow>
                        <StackLayout>
                        </StackLayout>
                    </Border>

                </StackLayout>
            </ScrollView>

            <CollectionView x:Name="ProdutosCollectionView"
               SelectionMode="Single" Margin="15" >
                <CollectionView.ItemTemplate >
                    <DataTemplate >
                        <StackLayout Padding="5">
                            <Border  Stroke="Gray"
                           StrokeThickness="1"
                           StrokeShape="RoundRectangle 10">
                                <StackLayout >
                                    <StackLayout Orientation="Horizontal" Spacing="20">
                                        <Border HeightRequest="100" 
                                           WidthRequest="100"
                                           StrokeThickness="0"
                                           StrokeShape="Ellipse"
                                           Padding="0">
                                            <Image Source="{Binding ImagemUrl}" Aspect="AspectFill"/>
                                        </Border>
                                        <VerticalStackLayout Spacing="8" HorizontalOptions="Fill">

                                            <Label Text="{Binding Nome}" 
                                                  FontAttributes="Bold" 
                                                  FontSize="16" 
                                                  TextColor="#333"/>
                                            <Label Text="{Binding Descricao}" 
                                                  FontSize="Caption" 
                                                  LineBreakMode="WordWrap" 
                                                  MaxLines="5" 
                                                  HorizontalOptions="Fill" 
                                                  TextColor="#666"/>
                                            <Label Text="{Binding Preco, StringFormat='R$ {0:F2}'}" 
                                                  FontSize="16" 
                                                  FontAttributes="Bold" 
                                                  TextColor="#27ae60"/>
                                        </VerticalStackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </Border>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>

        </VerticalStackLayout>

    </ScrollView>
</ContentPage>